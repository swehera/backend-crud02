<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
</head>
<body>
    <% if (users!="") { %>
        <table>
            <thead>
                <tr>
                    <th>S-NO</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index) => { %>
                 <tr>
                    <td><%= index+1 %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email%></td>
                    <td>
                        <a href="/edit/<%= user.id %>">Update</a>
                        <a href="/delete/<%= user.id %>">Delete</a>
                    </td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
        <button><a href="/register">add</a></button>
     
    <% } else { %>
        <h1>NO USER FOUND</h1>
        <button><a href="/register">add</a></button>
        <% }  %>

</body>
</html>